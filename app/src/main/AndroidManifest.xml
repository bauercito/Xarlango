<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cpv.chatpruebas">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.cpv.xarlango.Chat"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.cpv.xarlango.Land_activity" />
        </activity>
        <activity
            android:name="com.example.cpv.xarlango.Perfil"
            android:parentActivityName="com.example.cpv.xarlango.Buscar_contactos"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.cpv.xarlango.Buscar_contactos" />
        </activity>
        <activity
            android:name="com.example.cpv.xarlango.Buscar_contactos"
            android:parentActivityName="com.example.cpv.xarlango.Land_activity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.cpv.xarlango.Land_activity" />
        </activity>
        <activity
            android:name="com.example.cpv.xarlango.Usuarios"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.cpv.xarlango.Land_activity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.example.cpv.xarlango.Service_conexionPermanente"
            android:enabled="true"
            android:exported="true"></service>
        <service
            android:name="com.example.cpv.xarlango.servicio_notificaciones"
            android:enabled="true"
            android:exported="true"></service>
        <service
            android:name="com.example.cpv.xarlango.FirebaseMessagingServ">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name="com.example.cpv.xarlango.FirebaseInstanceIDServ">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <service
            android:name="com.example.cpv.xarlango.NotificationService">
        <intent-filter>
            <action android:name="your.app.domain.NotificationService" />

            <category android:name="android.intent.category.DEFAULT" />
        </intent-filter>
        </service>

        <receiver android:name="com.example.cpv.xarlango.Notificaciones" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>